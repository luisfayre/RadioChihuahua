<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFondoDatos">

    <include
        android:id="@+id/toolbar"
        layout="@layout/tool_bar"
        />

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="175dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/relativeLayout"
        android:background="@color/colorPreuba"

        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/iconcamara"
            android:layout_gravity="right"
            android:layout_weight="0.04"
            android:layout_marginStart="23dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/textView" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:elevation="10dp"
            android:id="@+id/CardViewPerfil"
            app:cardCornerRadius="40dp"
            app:cardElevation="5dp"
            app="@android:color/white"
            android:innerRadius="10dp"
            android:shape="ring"
            android:thicknessRatio="1.9"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp">
            <ImageView
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:id="@+id/photoFBImageView"
                android:src="@drawable/iconperfil"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:onClick="fotoPerfirl"
                >
            </ImageView>
        </android.support.v7.widget.CardView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Subir foto de perfil"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="120dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:elevation="1sp"
        android:layout_marginBottom="1dp"
        android:onClick="cambiarCorreo"
        android:background="#ebffffff"

    >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CORREO"
            android:id="@+id/TextViewemail"
            android:textSize="15dp"
            android:layout_marginLeft="1sp"
            android:layout_marginRight="1sp"
            android:layout_alignTop="@+id/emailTextView"
            android:layout_alignParentStart="true"
            android:layout_marginStart="22dp" />

        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="15dp"
            android:layout_gravity="right"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/colorProfile"/>
    </RelativeLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:elevation="1sp"
        android:layout_marginBottom="1dp"
        android:onClick="cambiarContraseña"
        android:background="#ebffffff"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONTRASEÑA"
            android:id="@+id/TextViewepassword"
            android:textSize="15dp"
            android:layout_marginLeft="1sp"
            android:layout_marginRight="1sp"
            android:layout_marginStart="22dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/passwordTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="15dp"
            android:layout_gravity="right"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/TextViewepassword"
            android:textColor="@color/colorProfile"
            />
    </RelativeLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:elevation="1sp"
        android:layout_marginBottom="1dp"
        android:background="#ebffffff"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NOMBRE"
            android:id="@+id/TextViewenombre"
            android:textSize="15dp"
            android:layout_marginLeft="1sp"
            android:layout_marginRight="1sp"
            android:layout_marginStart="22dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="15dp"
            android:layout_gravity="right"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/TextViewenombre"
            android:textColor="@color/colorProfile"/>
    </RelativeLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:elevation="1sp"
        android:layout_marginBottom="1dp"
        android:background="#ebffffff"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UBICACION"
        android:id="@+id/TextViewlocation"
        android:textSize="15dp"
        android:layout_marginLeft="1sp"
        android:layout_marginRight="1sp"
        android:layout_marginStart="22dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/locationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="15dp"
        android:layout_gravity="right"
        android:layout_alignTop="@+id/TextViewlocation"
        android:layout_alignParentEnd="true"
        android:textColor="@color/colorProfile"
        android:textStyle="bold"/>
    </RelativeLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:elevation="1sp"
        android:layout_marginBottom="1dp"
        android:background="#ebffffff"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GOOGLE +"
            android:id="@+id/TextViewgoogle"
            android:textSize="15dp"
            android:layout_marginLeft="1sp"
            android:layout_marginRight="1sp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="22dp" />


        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switchGoogle"
            android:onClick="switchG"
            android:layout_gravity="right"
            android:layout_weight="0.04"
            android:checked="false"
            android:layout_marginEnd="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:elevation="1sp"
        android:layout_marginBottom="1dp"
        android:background="#ebffffff"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/facebook"
            android:id="@+id/TextViewfacebook"
            android:textSize="15sp"
            android:layout_marginLeft="1sp"
            android:layout_marginRight="1sp"
            android:layout_marginStart="22dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switchFacebook"
            android:onClick="switchFB"
            android:layout_gravity="right"
            android:checked="false"
            android:layout_marginEnd="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/salir"
        android:onClick="salirCorreo"
        android:id="@+id/buttonLogoutFB"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_gravity="center_horizontal" />

</LinearLayout>