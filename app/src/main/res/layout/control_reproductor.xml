<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/imageView3_rep_repetir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/rep_repetir"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/imageView_rep_siguiente"
            android:layout_marginStart="15dp" />

        <ImageView
            android:id="@+id/imageView_rep_siguiente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/rep_sigiente"
            android:layout_marginStart="15dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/imageView_rep_play" />
        <ImageView
            android:id="@+id/imageView_rep_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/rep_play"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/imageView_rep_anterior"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/repanterior"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/imageView_rep_play"
            android:layout_marginEnd="15dp" />

        <ImageView
            android:id="@+id/imageView_rep_shuffle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/rep_shuffle"
            android:layout_alignTop="@+id/imageView_rep_anterior"
            android:layout_toStartOf="@+id/imageView_rep_anterior"
            android:layout_marginEnd="15dp"
            android:layout_centerVertical="true"/>

</RelativeLayout>