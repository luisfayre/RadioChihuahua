<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="FacebookLoginButton">
        <item name="android:text">""</item>
        <item name="android:background">@drawable/btn_facebook</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="GoogleLoginBuuton">
        <item name="android:text">""</item>
        <item name="android:background">@drawable/btn_google</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="IniciasSesion">
        <item name="android:text">""</item>
        <item name="android:background">@drawable/btn_iniciarsesion</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SwitchButtonStyle">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="hola">hola</style>


    <!-- Login Register -->
    <style name="Registerstyle" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorRegister</item>
        <item name="colorPrimaryDark">@color/colorRegisterDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- PERFIL -->
    <style name="Profilestyle" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorProfile</item>
        <item name="colorPrimaryDark">@color/colorProfileDar</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Backgroudndatosstyle">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/colorFondoDatos</item>
    </style>


    <!-- REPRODUCTOR -->
    <style name="Reproductortyle" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorReproductor</item>
        <item name="colorPrimaryDark">@color/colorReproductorDark</item>
    </style>

    <style name="ProgressBar_Reproductor">
        <item name="colorAccent">@color/colorProgressBar</item> <!-- Whatever color you want-->
    </style>

    <style name="Seekbar_Reproductor">
        <item name="colorAccent">@color/colorSeekBar</item> <!-- Whatever color you want-->
    </style>

</resources>
